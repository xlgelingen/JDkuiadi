<!--index.wxml-->
<scroll-view class="page-container" scroll-y type="list">
  <view class="page-content">
    <view class="logo-container">
      <image src="/pages/images/logo.png" />
    </view>
    <view class="form-item">
      <input type="number" class="form-item-input" placeholder="请输入快递单号" placeholder-class="form-item-input_placeholder" bindinput="handleChange"/>
    </view>
    <view class="form-item">
      <button class="form-item-btn" hover-class="form-item-btn_hover" bindtap="handleSubmit">提交</button>
    </view>
    <view class="form-item">
      <button class="form-item-btn" hover-class="form-item-btn_hover" bindtap="handleScancode">点击扫快递条形码</button>
    </view>
  </view>
</scroll-view>